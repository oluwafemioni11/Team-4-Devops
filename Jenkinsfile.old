pipeline {
  agent any 
  tools {
    maven 'Maven'
  }
  stages {
    stage ('Initialize') {
      steps {
        sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
            ''' 
      }
    }
    
    stage ('Source Composition Analysis') {
      steps {
         sh 'rm owasp* || true'
         sh 'wget "https://github.com/oluwafemioni11/Team-4-Devops/blob/master/source-compostion-analysis.sh" '
         sh 'chmod +x source-composition-analysis.sh'
         sh 'bash source-composition-analysis.sh'
         sh 'cat /var/lib/jenkins/OWASP-Dependency-Check/reports/dependency-check-report.xml'
         
         }
    }
    
    stage ('Build') {
      steps {
      sh 'mvn clean package'
       }
       }
stage ('Deploy-To-Tomcat') {
            steps {
           sshagent(['tomcat']) {
                sh 'scp -o StrictHostKeyChecking=no target/*.war ubuntu@3.95.229.210:/home/ubuntu/prod/apache-tomcat-8.5.84/webapps/webapp.war'
              }  
          }
      }
      
  }
}
