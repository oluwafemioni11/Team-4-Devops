pipeline {
  agent any 
  tools {
    maven 'Maven'
  }
  stages {
    stage ('Initialize') {
      steps {
      sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
            ''' 
      }
    }
    
    stage ('Source Composition Analysis') {
      steps {
         dependencyCheck additionalArguments: '--format HTML', odcInstallation: 'Team 4 Devops Dependency Check'
         
         }
    }
    
    
    stage ('SAST') {
      steps {
        withSonarQubeEnv('Team 4 Devops Sonarqube') {
          sh 'mvn sonar:sonar'
          sh 'cat target/sonar/report-task.txt'
          
          }
        }
    
    stage ('Build') {
      steps {
      sh 'mvn clean package'
       }
       }
stage ('Deploy-To-Tomcat') {
            steps {
           sshagent(['tomcat']) {
                sh 'scp -o StrictHostKeyChecking=no target/*.war ubuntu@3.95.229.210:/home/ubuntu/prod/apache-tomcat-8.5.84/webapps/webapp.war'
              }  
          }
      }
      
  }
}
}
